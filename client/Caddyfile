:80 {
    # 静态文件根目录
    root * /usr/share/caddy

    # 启用文件服务器
    file_server

    # 前端路由支持（SPA）
    try_files {path} /index.html

    # Gzip压缩（Caddy自动启用）
    encode gzip

    # 静态资源缓存
    @static {
        path *.js *.css *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static {
        Cache-Control "public, max-age=31536000, immutable"
    }

    # 日志
    log {
        output stdout
        format console
    }
}
